{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@parsers/*": [
        "Parsers/*"
      ],
      "@schemas/*": [
        "Schemas/*"
      ],
      "@trackerTypes/*": [
        "Types/*"
      ],
      "@util/*": [
        "Util/*"
      ],
      "~/*": [
        "./*"
      ],
    }, /* Allow multiple folders to be treated as one when resolving modules. */
  },
  "include": [
    "./**/*.ts"
 ],
  "exclude": [
    "node_modules",
    "dist",
  ],
}